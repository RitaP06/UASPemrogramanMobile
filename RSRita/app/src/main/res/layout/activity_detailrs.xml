<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="19dp"
        app:cardBackgroundColor="@color/quantum_white_100"
        app:cardCornerRadius="9dp"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="19dp"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/img_rs"
                app:srcCompat="@drawable/nopic"
                android:paddingBottom="@dimen/leku_gap"/>


        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/nama_rs"
                android:text="NAMA RUMAH SAKIT"
                android:textStyle="bold|italic"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/desc_rs"
                android:text="deskripsi tentang rumah sakit atau biografi rumah sakit informasi apapun tentang rumah sakit"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/alamat_rs"
                android:text="ALAMAT RUMAH SAKIT"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="KAMAR TERSEDIA :"/>

        <GridLayout android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:columnCount="2"
                android:foregroundGravity="center">

            <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@color/navy_blue_dark"
                    android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="KELAS A"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:id="@+id/kelasA"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="0 KAMAR"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_green"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="KELAS B"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:id="@+id/kelasB"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="0 KAMAR"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@color/orange"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="KELAS C"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:id="@+id/kelasC"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="0 KAMAR"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@color/red_dark"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="IGD"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:id="@+id/igd"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="0 KAMAR"/>
            </LinearLayout>

        </GridLayout>





    </LinearLayout>


</androidx.cardview.widget.CardView>
